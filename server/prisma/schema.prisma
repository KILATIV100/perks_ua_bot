generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LocationStatus {
  active
  coming_soon
}

enum UserRole {
  USER
  ADMIN
  OWNER
}

enum ProductType {
  MENU
  MERCH
  BEANS
}

model Location {
  id          String         @id @default(uuid())
  name        String
  lat         Float?
  long        Float?
  address     String?
  status      LocationStatus @default(active)
  canPreorder Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  orders      Order[]

  @@map("locations")
}

model User {
  id               String        @id @default(uuid())
  telegramId       String        @unique
  username         String?
  firstName        String?
  lastName         String?
  points           Int           @default(0)
  totalSpins       Int           @default(0)
  lastSpin         DateTime?
  lastSpinDate     String?       // YYYY-MM-DD for Kyiv midnight reset
  role             UserRole      @default(USER)
  referredById     String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  orders           Order[]
  sessionsAsPlayer1 GameSession[] @relation("Player1")
  sessionsAsPlayer2 GameSession[] @relation("Player2")

  @@map("users")
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  volume      String?
  price       Decimal     @db.Decimal(10, 2)
  category    String
  type        ProductType @default(MENU)
  imageUrl    String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]

  @@map("products")
}

model GameSession {
  id            String   @id @default(uuid())
  gameType      String   @default("TIC_TAC_TOE") // TIC_TAC_TOE, PERKIE_JUMP
  player1Id     String
  player2Id     String?
  player1       User     @relation("Player1", fields: [player1Id], references: [id])
  player2       User?    @relation("Player2", fields: [player2Id], references: [id])
  boardState    Json?    // For TIC_TAC_TOE: 3x3 board
  score         Int?     // For PERKIE_JUMP: player score
  securityHash  String?  // For PERKIE_JUMP: sha256(score + salt + timestamp)
  opponentType  String   @default("HUMAN") // HUMAN, AI, NONE (single player)
  status        String   @default("WAITING") // WAITING, PLAYING, FINISHED
  winnerId      String?
  pointsAwarded Int      @default(0) // Points given for this game
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Keep old column name for backwards compatibility with existing data
  @@map("game_sessions")
}

model Order {
  id         String      @id @default(uuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  locationId String
  location   Location    @relation(fields: [locationId], references: [id])
  status     String      @default("PENDING")
  total      Decimal     @db.Decimal(10, 2)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  items      OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  @@map("order_items")
}
