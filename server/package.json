{
  "name": "perkup-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "prisma db push --skip-generate --accept-data-loss || echo 'WARNING: prisma db push failed, starting server anyway'; node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.28.1",
    "fastify-socket.io": "^5.1.0",
    "prisma": "^5.22.0",
    "socket.io": "^4.8.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
